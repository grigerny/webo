<div class="row-fluid">
	<div class="span12">
		<div class="span10 offset1">
			<div class="span12">
				<div class="user-pic-flash-wrapper">
					<div id="user_pic">
						<% if user_signed_in? %>
							<%= link_to edit_user_registration_path do %>		
								<%= gravatar_for "#{current_user.email}", :size => 80, :class=> "gravatar-css" %> 
								<% end %>
								<% end %>
					</div>
				
						<div class="flash-wrapper">	
							<div id="flash-add">
								Hi! I'm webo. Search here to find a topic.		
							</div>
						</div>
				</div>
				
			</div>	
		</div>

<div class="row-fluid">
	<div class="span12">
		<div class="span10 offset1">
			<%= render "searchform" %>
		</div>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<div class="span10 offset1">
			<div class="category-loop-ajax">
				<div class="category-wrapper">
		 		<% @categories.sort { |a,b| a.name <=> b.name }.each do |cat| %>
					<div id="category-loop">
		 			<%= link_to category_path(cat), :id => "category-loop-link" do %>
						<%= cat.name.downcase %>
						<% end %>
					</div>
		 			<% end %>
			    </div>
			</div>
		</div>	
	</div>
	
			</div>
		</div>
	</div>