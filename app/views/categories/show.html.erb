<p id="notice"><%= notice %></p>
<div class="container">
	
	<div class="main">
	<div class="row-fluid">
		<div class="span12">
			<div class="span3 offset1">
				<div id="user_pic">
					<% if user_signed_in? %>
					<%= link_to edit_user_registration_path do %>		
					<%= gravatar_for "#{current_user.email}", :size => 80 %> 
					<% end %>
					<% end %>
			</div>
		</div>
	</div>

	<div class="row-fluid">
			<div class="span10 offset1">

					<i class="icon-plus"></i>

					<div id="add-link-form-wrapper">
						<% if user_signed_in? %>	
							<%= form_for([@category, @category.links.build]) do |f| %>
								<%= f.text_field :name, :class => "add-link-form" %>
								<% end %>
								<% end %>
					</div>	
				</div>	
	</div>
				
	<div class="row-fluid">
		<div class="span10 offset1">
			<div id="title-bar">
			</div>
		</div>	
	</div>	
	
<div class="row-fluid">
	<div class="span10 offset1">
		<div id="linkwrapper">
			<% @category.links.plusminus_tally.each do |link| %>
	
		
			<% unless link.name == nil %>
				<div class="gravatar-wrapper">
					<%= gravatar_for link.user.email, :size => 32 if link.user %>
				</div>	
				<div class="link-wrapper">	
					<%= link_to "http://#{link.name}", :class => "link-color" do  %>
					<%= link.name %>
					<% end %>
				</div>	
				<div class="arrow-wrapper">
				<div id="link-up-div">
					<%= link_to vote_up_link_path("#{link.id}"), :class => "icon-up-css" do  %>
					<i class="icon-arrow-up"></i>
					<% end %>
				</div>	
				<br>
				<div id="link-down-div">
					<%= link_to vote_down_link_path("#{link.id}"), :class => "icon-down-css" do %>	
					<i class="icon-arrow-down"></i>
					<% end %>
				</div>
				</div>
				<br>
				<div id="link-plusminus">
					<%= link.plusminus %>	
				</div>	
					<div id="loop-bar">		 	
					<% end %>
					</div>	
					<% end %>	
					
							
		</div>
	</div>
</div>			

</div>
<%= link_to 'Back', categories_path %>

