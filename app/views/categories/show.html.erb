<p id="notice"><%= notice %></p>
<div class="container">
	
	<div class="main">
	<div class="row-fluid">
		<div class="span12">
			<div class="span3 offset1">
				<div id="user_pic">
					<% if user_signed_in? %>
					<%= link_to edit_user_registration_path do %>		
					<%= gravatar_for "#{current_user.email}", :size => 120 %> 
					<% end %>
					<% end %>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<div class="span10 offset1">
				<i class="icon-search"></i>
				<div class="search-category-form">
				<%= render "searchform" %>
				</div>
			</div>
		</div>
	</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<div class="span10 offset1">
				<div id="category-title">
			 	<%= @category.name %>
				</div>	
			</div>	
		</div>	
	</div>
	<div class="row-fluid">
		<div class="span10 offset1">
			<div id="title-bar">
			</div>
		</div>	
	</div>	


	<%= form_for([@category, @category.links.build]) do |f| %>
	  <div class="field">
	    <%= f.label :name %> <%= f.text_field :name %>
	  </div>

	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
	
<div class="row-fluid">
	<div class="span10 offset1">
		<div id="linkwrapper">
			<% @category.links.each do |link| %>
			<%= link.name %>
			<% end %>
		</div>
	</div>
</div>			

</div>
<%= link_to 'Back', categories_path %>

