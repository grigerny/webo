<p id="notice"><%= notice %></p>
<div class="container">
	
	<div class="main">
	<div class="row-fluid">
		<div class="span12">
			<div class="span3 offset1">
				<div id="user_pic">
					<% if user_signed_in? %>
					<%= link_to edit_user_registration_path do %>		
					<%= gravatar_for "#{current_user.email}", :size => 80 %> 
					<% end %>
					<% end %>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<div class="span10 offset1">
				<i class="icon-search"></i>
				<div class="search-category-form">
				<%= render "searchform" %>
				</div>
			</div>
		</div>
	</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<div class="span10 offset1">
				<div id="category-title">
			 	<%= @category.name %>
				</div>	
				<div id="add-link-form-wrapper">
				<% if user_signed_in? %>	
				<i class="icon-plus"></i>	
				<%= form_for([@category, @category.links.build]) do |f| %>
				<%= f.text_field :name, :class => "add-link-form" %>
				<% end %>
				<% end %>
				</div>
			</div>		
		</div>	
	</div>
	
	<div class="row-fluid">
		<div class="span10 offset1">
			<div id="title-bar">
			</div>
		</div>	
	</div>	
	
<div class="row-fluid">
	<div class="span10 offset1">
		<div id="linkwrapper">
			
			<% @category.links.each do |link| %>	
				<div class="gravatar-wrapper">
					<%= gravatar_for link.user.email, :size => 32 if link.user %>
				</div>	
					
				<div class="link-wrapper">	
					<%= link_to "http://#{link.name}", :class => "link-color" do  %>
					<%= link.name %>
				</div>	
	
					<div id="loop-bar">	
								
					<% end %>
					<br>
					<br>

					</div>	
									
					<% end %>	
		</div>
	</div>
</div>			

</div>
<%= link_to 'Back', categories_path %>

